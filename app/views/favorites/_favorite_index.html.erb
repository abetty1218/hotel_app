<table id="favoritehotel_index" class="table-bordered table-striped">
  <tr>
    <th class="hotelname center">ホテル名</th>
    <th class="hotelmemo center">メモ</th>
    <th class="center">編集</th>
    <th class="center">削除</th>
  </tr>
  <% @hotels.each do |hotel| %>
    <tr>
      <td class="favorite_hotel_name"><%= hotel.name %></td>
      <td class="favorite_hotel_memo">
        <span class="all_display"><%= hotel.memo %></span>
        <span class="partical_display"><%= hotel.memo.truncate(100) %></span>
        <% if hotel.memo.length > 100 %>
           </br><span class="continue hotel_close"><続きを表示する></span>
        <% end %>
      </td>
      <td class="text-center"><%= link_to "編集",edit_user_favorite_path(current_user.id,hotel), class: 'btn btn-primary' %></td>
      <td class="text-center"><%= link_to "削除",user_favorite_path(current_user.id,hotel), method: :delete, class: 'btn btn-danger',data: { confirm: "メモを消去してもいいですか？" } %></td>
    </tr>
  <% end %>
</table>  
