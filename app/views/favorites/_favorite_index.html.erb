<table id="favoritehotel_index" class="table-bordered table-striped">
  <tr>
     <th class="hotelname">ホテル名</th>
     <th class="hotelcomment">メモ</th>
     <th colspan="2"></th>
  </tr>
  <% @hotels.each do |hotel| %>
    <tr>
      <td id="favorite_hotel_name"><%= hotel.name %></td>
      <td id="favorite_hotel_comment"><%= hotel.memo.truncate(60) %></td>
      <td class="text-center"><%= link_to "編集",edit_user_favorite_path(current_user.id,hotel), class: 'btn btn-primary' %></td>
      <td class="text-center"><%= link_to "削除",user_favorite_path(current_user.id,hotel), method: :delete, class: 'btn btn-danger',data: { confirm: "消去してもいいですか？" } %></td>
    </tr>
  <% end %>
</table>  

