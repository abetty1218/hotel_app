<% provide(:title, 'お気に入り一覧') %>
<h1>お気に入り一覧</h1>
<div class="dropdown">
  <button class="btn btn-default dropdown-toggle user_count" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    <%= @page %>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <% @per_pages.each do |per_page| %>
      <li><%= link_to(per_page, user_favorites_path(per_page: per_page)) %></li>
    <% end %>
  </ul>
</div>
<% if @page != "全表示" %>
  <%= will_paginate @hotels, prev_label: '&lt 前へ', next_label: '次へ &gt',class: "user_pagination" %>
<% end %>
<%= render :partial => "favorite_index" %>
<%= render :partial => "favorite_sp_index" %>
