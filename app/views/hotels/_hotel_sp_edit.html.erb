<ul class="hotel_edit_sp_index">
   <div class="hotel_show_content">
      <li class="hotel_show_item">ホテル名</li>
      <li class="hotel_show_content">
       <% if @hotel.site == 2 %>
         <%= hotel.elements["//Hotel/HotelName"].text %>
       <% else %>
         <%= hotel.elements["//hotels/hotel/hotelBasicInfo/hotelName"].text %>
       <% end %>  
      </li>
   </div>
   <div class="hotel_show_content">
      <li class="hotel_show_item">住所</li> 
      <li class="hotel_show_item">
        <% if @hotel.site == 2 %>
          <%= hotel.elements["//Hotel/HotelAddress"].text %>
        <% else %>
          <%= hotel.elements["//hotels/hotel/hotelBasicInfo/address1"].text %><%= hotel.elements["//hotels/hotel/hotelBasicInfo/address2"].text %>
        <% end %>  
      </li> 
   </div>
   <div class="hotel_show_content">
      <li class="hotel_show_item">価格</li> 
      <li class="hotel_show_item">
         <% if @hotel.site == 2 %>
           <%= hotel.elements["//Hotel/SampleRateFrom"].text %>円
         <% else %>
           <%= hotel.elements["//hotels/hotel/hotelBasicInfo/hotelMinCharge"].text %>円
         <% end %>
           
      <li>
   </div>
    <div id="text_edit_sp_form">
      <%= f.label :comment %>(250文字以内）<span class="letter_count"></span>
      <%= f.text_area :comment, :size => "20x5",class:"hotel_edit_sp_text letter" %>
    </div>
</ul>