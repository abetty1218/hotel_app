<% provide(:title, 'コメント編集') %>
<% provide(:button_text, '更新') %>
<h1>コメント編集aaaa</h1>

<%= form_with(model:@post,url: user_post_path(current_user,@post),local:true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :number, value: @post.number %>
  <% hotel = get_hotelinfo(@post.number) %>
  <div class="picture">
    <img src="<%= hotel["Picture"] %>" width="100%" height="100%">
  </div>
  <div class="homepage">
    <p class="text-primary">ホテル名をクリックすると、じゃらんのホームページの各ホテル詳細ページを開きます。</p>
  </div>
  <%= render :partial => "hotel_edit", locals: {hotel: hotel,f: f} %>
  <%= render :partial => "hotel_sp_edit", locals: {hotel: hotel,f: f} %>
  <div class="favoritehotel_btn">
    <%= f.submit yield(:button_text), class: "btn btn-primary register_btn" %>
    <%= link_to "戻る",user_posts_index_path(current_user),class:"btn btn-success register_btn" %>
  </div>
<% end %>
