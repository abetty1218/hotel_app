<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      下記の<%= object.errors.count %>つのエラーがあります。aaa
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li class="text-danger"><%= msg %>。</li>
    <% end %>
    </ul>
  </div>
<% end %>